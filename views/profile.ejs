<!DOCTYPE html>
<html>
<%- include("templates/header") %>
  <body>
    <script type="text/javascript">
      $.cloudinary.config({
        cloud_name: "<%= process.env.CLOUDINARY_CLOUD_NAME %>",
        secure: true,
      });
    </script>
    <section class="section">
      <div class="maincolumns columns is-desktop is-vcentered">
        <div class="column is-10 is-rounded is-offset-1 is-light box container">
          <div class="column">
            <h1 class="title is-1">Profile</h1>
          </div>
          <div class="column is-centered">
            <span style="padding-right: 16px;" style="margin-bottom: 0;" class="title is-4">Name: </span>
            <span class="title is-6">Changwhi's</span>
        </div>
        <div class="column is-centered" style="display: flex; align-items: center;">
            <span style="padding-right: 16px;" class="title is-4">Picture: </span>
            <% if (locals.allPics) { %>
              <div class="table-container">
                <table class="table is-bordered is-hoverable is-striped is-fullwidth">
                  <thead>
                    <tr>
                      <th>Picture Name</th>
                      <th>Picture</th>
                      <th>Remove</th>
                    </tr>
                  </thead>
                  <% let i=0; %>
                    <% for(i=0; i < allPics.length; i++) { %>
                      <tr>
                        <td>
                          <%= allPics[i]['name'] %>
                        </td>
                        <% if (allPics[i]['public_id']) { %>
                          <td colspan="1">
                            <script type="text/javascript">
                              document.write(
                                $.cloudinary
                                  .imageTag("<%- allPics[i]['public_id']%>", {
                                    height: 100,
                                    width: 100,
                                    crop: "fit",
                                  })
                                  .toHtml()
                              );
                            </script>
                            <% } else { %>
                          </td>

                          <td colspan="1">
                            <form action="/setUserPic" method="post" enctype="multipart/form-data">
                              <div class="field is-horizontal">
                                <input type="hidden" name="pic_id" value="<%= allPics[i]['picture_UUID']%>" />
                                <div id="picture-upload" class="file is-info has-name is-small is-right">
                                  <label class="file-label">
                                    <input class="file-input" type="file" name="image" />
                                    <span class="file-cta">
                                      <span class="file-icon"><i class="fas fa-upload"></i></span>
                                      <span class="file-label">Choose a fileâ€¦</span>
                                    </span>
                                    <span class="file-name">No File</span>
                                  </label>
                                </div>
                                &nbsp;
                                <div class="field">
                                  <button class="button is-link is-small">
                                    <span>Upload</span>
                                    <span class="icon is-small">
                                      <i class="fas fa-image"></i>
                                    </span>
                                  </button>
                                </div>
                              </div>
                            </form>
                            <% } %>
                          </td>
                          <td>
                            <a
                              href="/deletePics?id=<%= allPics[i]['public_id']%>&picture_UUID=<%= allPics[i]['picture_UUID']%>&pic=<%=true%>">
                              <span class="icon is-small">
                                <i class="fas fa-eraser"></i> </span></a>
                          </td>
                      </tr>
                      <% } %>
                </table>
              </div>
              <% } %>
          </div>

          <form action="/addpic" method="post"> 
            <div class="field is-horizontal">
              <div class="field-label is-normal">
                <label class="label">Add pictures</label>
              </div>
              <div class="field-body">
                <div class="field">
                  <p class="control is-expanded">
                    <input name="pic_name" class="input" type="text" placeholder="Picture Name" />
                  </p>
                </div>
                <div class="field">
                  <button class="button is-dark">
                    <span>Add</span>
                    <span class="icon is-small">
                      <i class="fas fa-user"></i>
                    </span>
                  </button>
                </div>
              </div>
            </div>
          </form>        
        </div>
          <div class="column">
            <div class="columns is-centered">
              <table class="table">
                <thead>
                  <tr>
                    <th>Threads</th>
                    <th># Comments</th>
                    <th># Likes</th>
                    <th>Last Update</th>
                  </tr>
                </thead>
                <tbody>
                </tbody>
              </table>
            </div>
           <div class="column">
            <div class="column is-centered">
                <form action="/addThread" method="post" style="text-align: center;">
                    <div class="flex-container" style="display: flex; align-items: center; justify-content: center;">
                        <button class="button is-primary is-rounded">
                            <span class="icon is-small">
                                <i class="fas fa-plus"></i>
                            </span>
                        </button>
                        <span style="padding-left: 12px;">Add New Thread</span>
                    </div>
                </form>
            </div>
        </div>
      </div>
    </section>
  </body>
</html>
